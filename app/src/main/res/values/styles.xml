<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E91E63</item>
        <!-- Light rosa -->
        <item name="colorPrimaryDark">#C2185B</item>
        <!-- Dark rosa -->
        <item name="colorAccent">#536DFE</item>
        <!-- Blue -->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextFormStyle">
        <item name="android:layout_height">@dimen/sizeHeightEditTex</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/rosaclaro</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/custom_edit_text_form</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
