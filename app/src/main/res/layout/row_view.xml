<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_avatar_clienta"
            android:layout_margin="7dp"
            android:layout_width="@dimen/avator_size"
            android:layout_height="@dimen/avator_size"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/a_avator" />
        <TextView
            android:id="@+id/clienta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_avatar_clienta"
            android:textSize="@dimen/article_subheading"
            android:layout_margin="10dp"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Valeria Ahumada Oliver"/>

        <TextView
            android:id="@+id/cliente_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/article_subheading"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="7442298431"
            android:layout_alignBottom="@+id/list_avatar_clienta"
            android:layout_alignLeft="@+id/clienta"
            android:layout_alignStart="@+id/clienta" />

        <!-- quick and dirty divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="bottom"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</FrameLayout>
