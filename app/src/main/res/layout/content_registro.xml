<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chris.sesi.com.minegociomk.Registro">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:hint="@string/usuario"
        android:id="@+id/r_email"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nombre"
        android:ems="10"
        android:layout_below="@+id/r_email"
        android:layout_alignRight="@+id/r_email"
        android:layout_alignEnd="@+id/r_email"
        android:layout_marginTop="17dp"
        android:id="@+id/r_nombre"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/r_nombre"
        android:layout_alignRight="@+id/r_nombre"
        android:layout_alignEnd="@+id/r_nombre"
        android:layout_marginTop="17dp"
        android:hint="@string/pass"
        android:id="@+id/r_pass"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Usuario MK"
        android:id="@+id/r_userMK"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/r_pass"
        android:layout_alignLeft="@+id/r_pass"
        android:layout_alignStart="@+id/r_pass"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/r_passMK"
        android:hint="ContraseÃ±a MK"
        android:layout_below="@+id/r_userMK"
        android:layout_alignLeft="@+id/r_userMK"
        android:layout_alignStart="@+id/r_userMK"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/r_passMK"
        android:layout_alignRight="@+id/r_passMK"
        android:layout_alignEnd="@+id/r_passMK"
        android:layout_marginTop="13dp"
        android:hint="Nivel MK"
        android:id="@+id/r_nivel"
        android:textAlignment="center" />

    <Button
        android:text="@string/registrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_nivel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/r_btnOk"
        style="@style/Widget.AppCompat.Button.Colored" />
</RelativeLayout>